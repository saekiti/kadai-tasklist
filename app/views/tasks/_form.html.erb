<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.label :content, 'タスク名' %>
  <%= f.text_field :content %>

  <%= f.label :status, '状態' %>
  <%= f.text_field :status %>


  <%= f.submit '追加' %>
<% end %>